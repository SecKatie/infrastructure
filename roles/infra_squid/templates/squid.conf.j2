# Squid Proxy Configuration
# Managed by Ansible - DO NOT EDIT MANUALLY

#
# Network Settings
#
http_port {{ squid_bind_address }}:{{ squid_port }}
{% if squid_tls_enabled | default(false) %}
https_port {{ squid_bind_address }}:{{ squid_tls_port }} tls-cert={{ squid_tls_cert }} tls-key={{ squid_tls_key }}
{% endif %}

#
# Authentication
#
auth_param basic program /usr/lib/squid/basic_ncsa_auth /etc/squid/passwd
auth_param basic realm Squid Proxy
auth_param basic credentialsttl 2 hours
auth_param basic casesensitive on

acl authenticated proxy_auth REQUIRED

#
# Access Control Lists
#
acl localnet src 0.0.0.1-0.255.255.255  # RFC 1122 "this" network (LAN)
acl localnet src 10.0.0.0/8             # RFC 1918 local private network (LAN)
acl localnet src 100.64.0.0/10          # RFC 6598 shared address space (CGN/Tailscale)
acl localnet src 169.254.0.0/16         # RFC 3927 link-local machines
acl localnet src 172.16.0.0/12          # RFC 1918 local private network (LAN)
acl localnet src 192.168.0.0/16         # RFC 1918 local private network (LAN)
acl localnet src fc00::/7               # RFC 4193 local private network range
acl localnet src fe80::/10              # RFC 4291 link-local machines

# SSL ports
acl SSL_ports port {% for port in squid_ssl_ports %}{{ port }}{% if not loop.last %} {% endif %}{% endfor %}

# Safe ports
acl Safe_ports port {% for port in squid_safe_ports %}{{ port }}{% if not loop.last %} {% endif %}{% endfor %}

acl CONNECT method CONNECT

#
# Access Rules
#
# Deny requests to certain unsafe ports
http_access deny !Safe_ports

# Deny CONNECT to other than secure SSL ports
http_access deny CONNECT !SSL_ports

# Only allow cachemgr access from localhost
http_access allow localhost manager
http_access deny manager

# Require authentication for all requests
http_access allow authenticated

# Deny all other access
http_access deny all

#
# Caching
#
cache_mem {{ squid_cache_mem }}
maximum_object_size_in_memory {{ squid_maximum_object_size_in_memory }}
cache_dir ufs /var/spool/squid {{ squid_cache_dir_size }} 16 256

#
# Logging
#
access_log {{ squid_access_log }}
cache_log {{ squid_cache_log }}

#
# Misc Settings
#
visible_hostname {{ squid_visible_hostname }}

# Security headers - hide internal info
forwarded_for delete
via off

# Refresh patterns
refresh_pattern ^ftp:           1440    20%     10080
refresh_pattern ^gopher:        1440    0%      1440
refresh_pattern -i (/cgi-bin/|\?) 0     0%      0
refresh_pattern .               0       20%     4320

# Shutdown behavior
shutdown_lifetime 3 seconds
