# Cloudflared Configuration
# Managed by Ansible - DO NOT EDIT MANUALLY

tunnel: {{ cloudflared_tunnel_id }}
credentials-file: {{ cloudflared_config_dir }}/{{ cloudflared_tunnel_id }}.json

{% if cloudflared_metrics_enabled %}
metrics: 0.0.0.0:{{ cloudflared_metrics_port }}
{% endif %}

no-autoupdate: true
loglevel: {{ cloudflared_log_level }}

ingress:
  - hostname: {{ cloudflared_hostname }}
    service: {{ cloudflared_service_url }}
  - service: http_status:404
