---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: personal-site
  namespace: {{ personal_site_namespace }}
  labels:
    app.kubernetes.io/name: personal-site
    app.kubernetes.io/part-of: personal-site
    app.kubernetes.io/managed-by: ansible
  annotations:
    app.kubernetes.io/description: "Personal landing page - mulliken.net"
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 0
      maxSurge: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: personal-site
  template:
    metadata:
      labels:
        app.kubernetes.io/name: personal-site
        app.kubernetes.io/part-of: personal-site
        app.kubernetes.io/managed-by: ansible
    spec:
      affinity:
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
            - weight: 100
              preference:
                matchExpressions:
                  - key: node-role.kubernetes.io/control-plane
                    operator: DoesNotExist
      containers:
        - name: nginx
          image: {{ personal_site_image }}:{{ personal_site_version }}
          imagePullPolicy: Always
          ports:
            - name: http
              containerPort: {{ personal_site_port }}
              protocol: TCP
          resources:
            requests:
              cpu: {{ personal_site_cpu_request }}
              memory: {{ personal_site_memory_request }}
            limits:
              cpu: {{ personal_site_cpu_limit }}
              memory: {{ personal_site_memory_limit }}
          readinessProbe:
            httpGet:
              path: /
              port: http
            initialDelaySeconds: 5
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /
              port: http
            initialDelaySeconds: 10
            periodSeconds: 30
          securityContext:
            runAsNonRoot: false
            readOnlyRootFilesystem: false
---
apiVersion: v1
kind: Service
metadata:
  name: personal-site
  namespace: {{ personal_site_namespace }}
  labels:
    app.kubernetes.io/name: personal-site
    app.kubernetes.io/part-of: personal-site
    app.kubernetes.io/managed-by: ansible
spec:
  type: ClusterIP
  selector:
    app.kubernetes.io/name: personal-site
  ports:
    - name: http
      port: {{ personal_site_port }}
      targetPort: {{ personal_site_port }}
      protocol: TCP
